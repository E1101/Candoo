<?xml version="1.0" encoding="UTF-8"?>
<template>
	<name>Enterpenuer</name>
	<description>Enterpenuer FrontEnd</description>
	<author>Core Team</author>
	<version>1.0</version>
	<license>free</license>
	
	<params>
		<param type="select" name="theme" label="General skins" description="You can choose default site skin">
			<value>theme_clean</value>
			<option name="Clean theme" value="theme_clean" />
			<option name="Light theme" value="theme_light" />
			<option name="Dark theme"  value="theme_dark" />
		</param>
		
		<param type="select" name="schemes" label="Color schemes" >
			<value>blue</value>
			<option name="Blue" value="blue" />
			<option name="Orange" value="orange" />
			<option name="Red"  value="red" />
			<option name="Green"  value="green" />
			<option name="Dark blue"  value="dark_blue" />
			<option name="Sea wave"  value="sea_wave" />
			<option name="Purple"  value="purple" />
			<option name="Dark green"  value="dark_green" />
		</param>
	</params>
	
	<install>
	</install>
	
	<layouts>
	
		<layout>
			<file>home</file>
			<route module="default" controller="index" action="index" />
		</layout>
	
		<layout default="default">
			<file>fullwidth</file>
		</layout>

		<layout>
			<file>sidebar</file>
			<boards>
				<board>
					<name>sidebar</name>
				</board>
			</boards>
		</layout>
		
		<layout>
			<file>_footer</file>
			<boards>
				<board>
					<name>col_1</name>
					<widget widget="Widgets_Html_Widget" action="display" _route="default:index:index" >
						<content>
							<![CDATA[
								<div id="title_bottom">
									<p><a href="home.html"><img src="/candoo/Web/Templates/websplash/layout/images/spacer.gif" alt="WebSplash" title="WebSplash" /></a></p>
								</div>
								<p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration some form, by injected  randomised words which don't look even slightly If you are going to use... <a href="#"><img src="/candoo/Web/Templates/websplash/layout/images/arrow_6.gif" alt="" /></a></p>
							]]>
						</content>
					</widget>
					<widget widget="Widgets_Html_Widget" action="display" _route="!default:index:index" >
						<content>
							<![CDATA[
								<div id="title_bottom">
									<p><a href="home.html"><img src="/candoo/Web/Templates/websplash/layout/images/spacer.gif" alt="WebSplash" title="WebSplash" /></a></p>
								</div>
								<p>This widget load on every page route except of default:index:index</p>
							]]>
						</content>
					</widget>
				</board>
				<board>
					<name>col_2</name>
				</board>
				<board>
					<name>col_3</name>
				</board>
				<board>
					<name>col_4</name>
				</board>
			</boards>
		</layout>
		
	</layouts>
	
</template>

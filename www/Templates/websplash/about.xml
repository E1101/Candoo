<?xml version="1.0" encoding="UTF-8"?>
<template>
	<name>Enterpenuer</name>
	<description>Enterpenuer FrontEnd</description>
	<author>Core Team</author>
	<version>1.0</version>
	<license>free</license>
	
	<params>
		<param type="select" name="theme" label="General skins" description="You can choose default site skin">
			<option name="Clean theme" value="theme_clean" />
			<option name="Light theme" value="theme_light" />
			<option name="Dark theme"  value="theme_dark" />
		</param>
		
		<param type="select" name="schemes" label="Color schemes" >
			<option name="Blue" value="blue" />
			<option name="Orange" value="orange" />
			<option name="Red"  value="red" />
			<option name="Green"  value="green" />
			<option name="Dark blue"  value="dark_blue" />
			<option name="Sea wave"  value="sea_wave" />
			<option name="Purple"  value="purple" />
			<option name="Dark green"  value="dark_green" />
		</param>
	</params>
	
	<install>
	</install>
	
	<layouts>
	
		<layout>
			<file>home</file>
		</layout>
	
		<layout default="default">
			<file>fullwidth</file>
		</layout>

		<layout>
			<file>sidebar</file>
			<boards>
				<board>
					<name>sidebar</name>
				</board>
			</boards>
		</layout>
		
		<layout>
			<file>_footer</file>
			<boards>
				<board>
					<name>col_1</name>
				</board>
				<board>
					<name>col_2</name>
				</board>
				<board>
					<name>col_3</name>
				</board>
				<board>
					<name>col_4</name>
				</board>
			</boards>
		</layout>
		
	</layouts>
	
</template>
